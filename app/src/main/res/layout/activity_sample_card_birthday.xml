<!-- activity_sample_card.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Sample card image -->
    <ImageView
        android:id="@+id/imageViewSampleCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/birthday" />

    <!-- Horizontal layout for text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Layout for text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:orientation="vertical">

            <!-- Sample card title -->
            <TextView
                android:id="@+id/textViewOccasionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday_greet"
                android:textColor="@color/pink"
                android:textSize="24sp" />

            <!-- Sample card description -->
            <TextView
                android:id="@+id/textViewCardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardtext"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
